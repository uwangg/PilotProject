        <filter-name>BoardLoginFilter</filter-name>
        <url-pattern>/board</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>UserLoginFilter</filter-name>
        <url-pattern>/user</url-pattern>
    </filter-mapping>
</web-app>